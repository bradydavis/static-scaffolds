<%%session_facets = <%=gen_spec.singular_name%>_search%>
<form action=<%%=<%=gen_spec.index_path%>%> class="facet_form">
<%for facet in gen_spec.search_facets -%>
<h2><%=facet[:title]%></h2>
<%if facet[:partial]=="date_range_facet" -%>
  From:
  <input type="text" id="<%%=session_facets.<%=facet[:name]%>.lower_limit_param_name%>" name="<%%=session_facets.<%=facet[:name]%>.lower_limit_param_name%>" value="<%%=session_facets.<%=facet[:name]%>.lower_limit%>" size="10"><br>
  To:
  <input type="text" id="<%%=session_facets.<%=facet[:name]%>.upper_limit_param_name%>" name="<%%=session_facets.<%=facet[:name]%>.upper_limit_param_name%>" value="<%%=session_facets.<%=facet[:name]%>.upper_limit%>" size="10"><br>

  <script type="text/javascript">
  $(function() {
  	$("#<%%=session_facets.<%=facet[:name]%>.lower_limit_param_name%>").datepicker();
  	$("#<%%=session_facets.<%=facet[:name]%>.upper_limit_param_name%>").datepicker();		
  });
  </script>	
<%end -%>
<%if facet[:partial]=="numeric_range_facet" -%>
	From:
	<input type="text" name="<%%=session_facets.<%=facet[:name]%>.lower_limit_param_name%>" value="<%%=session_facets.<%=facet[:name]%>.lower_limit%>" size="3">
	To:
	<input type="text" name="<%%=session_facets.<%=facet[:name]%>.upper_limit_param_name%>" value="<%%=session_facets.<%=facet[:name]%>.upper_limit%>" size="3"><br>
<%end -%>
<%if facet[:partial]=="keyword_facet" -%>
  <input type="text" name="<%%=session_facets.<%=facet[:name]%>.param_name%>" value="<%%=session_facets.<%=facet[:name]%>.search_phrase%>">
<%end -%>

<%if facet[:partial]=="checkbox_facet" -%>
<%% for option in @<%=facet[:attributes]%>_checkbox_options -%>
<div class="facet_form_checkbox">
  <input type="checkbox" name="<%%=session_facets.<%=facet[:name]%>.param_name%>[]" value="<%%=option%>" <%%if session_facets.<%=facet[:name]%>.selections and  session_facets.<%=facet[:name]%>.selections.include?(option)%>CHECKED<%%end%>"> <%%=option%> <%%="[blank]" if option==nil or option==""%> <br>
</div>
<%%end -%>
<%end -%>

<%end -%>
<input type="submit" id="facet_submit">
</form>