<%% semantic_form_for <%=gen_spec.form_for_obj%> do |form| %>

<% for group in gen_spec.safe_form_groups -%>
  <%% form.inputs :name => <%=group[:group_name].inspect%> do %>
<%for attribute in group[:attributes] -%>
    <%options = gen_spec.column_specs[attribute.to_sym]%>
    <%%= form.input <%=attribute.to_sym.inspect %>, :required=><%=options[:required].inspect%>, :label=><%=options[:label].inspect%>, :hint=><%=options[:units].inspect%> %>
<%end -%>
<%end -%>
  <%% end %>
  <%% form.buttons do %>
    <%%= form.commit_button %>
  <%% end %>

<%% end %>

